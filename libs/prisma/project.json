{
  "name": "prisma",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/prisma/src",
  "projectType": "library",
  "targets": {
    "generate-all": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/prisma",
        "parallel": false,
        "commands": [
          "prisma generate --schema schema.prisma"
        ]
      }
    },
    "generate-client": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/prisma",
        "parallel": false,
        "commands": [
          "prisma generate --schema schema.prisma --generator client"
        ]
      }
    },
    "generate-classes": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/prisma",
        "parallel": false,
        "commands": [
          "prisma generate --schema schema.prisma --generator prismaClassGenerator"
        ]
      }
    },
    "migration": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/prisma",
        "parallel": false,
        "commands": [
          "prisma migrate dev --name {args.name}"
        ]
      }
    },
    "studio": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma studio --schema libs/prisma/schema.prisma"
        ]
      }
    }
  },
  "tags": ["scope:prisma"]
}
